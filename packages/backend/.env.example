# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_PATH=./data/database.sqlite

# Open Banking Configuration
# Escolha o provedor: 'nordigen', 'tink', 'pluggy', ou 'mock' (para desenvolvimento)
# - nordigen: Europa (Alemanha, etc)
# - tink: Europa
# - pluggy: Brasil
# - mock: Dados simulados
OPEN_BANKING_PROVIDER=mock

# Redirect URI (deve estar registrado no provedor)
OPEN_BANKING_REDIRECT_URI=http://localhost:3000/bank/callback

# GoCardless/Nordigen (Gratuito - Recomendado para Europa)
# Obtenha suas credenciais em: https://bankaccountdata.gocardless.com/
NORDIGEN_SECRET_ID=your_nordigen_secret_id
NORDIGEN_SECRET_KEY=your_nordigen_secret_key

# Tink (Popular na Europa)
# Obtenha suas credenciais em: https://console.tink.com/
TINK_CLIENT_ID=your_tink_client_id
TINK_CLIENT_SECRET=your_tink_client_secret
TINK_API_URL=https://api.tink.com

# Pluggy (Gratuito - Recomendado para Brasil) ðŸ‡§ðŸ‡·
# Obtenha suas credenciais em: https://dashboard.pluggy.ai/signup
PLUGGY_CLIENT_ID=your_pluggy_client_id
PLUGGY_CLIENT_SECRET=your_pluggy_client_secret
PLUGGY_BASE_URL=https://api.pluggy.ai

# Security
SESSION_SECRET=change_this_in_production
JWT_SECRET=change_this_in_production

# Frontend URL
FRONTEND_URL=http://localhost:3000
